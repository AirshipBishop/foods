<div class="panel panel-defualt">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @restaurant.image.url(:medium) %>
          <div class="table-responsive">
            <table class="table">
              <tbody>
                <tr>
                  <td><strong>Restaurant:</strong></td>
                  <td><%= @restaurant.name %></td>
                </tr>
                <tr>
                  <td><strong>Address:</strong></td>
                  <td><%= @restaurant.address %></td>
                </tr>
                <tr>
                  <td><strong>Zip:</strong></td>
                  <td><%= @restaurant.zip %></td>
                </tr>
                <tr>
                  <td><strong>Phone Number:</strong></td>
                  <td><%= @restaurant.phone %></td>
                </tr>
                <tr>
                  <td><strong>Description:</strong></td>
                  <td><%= @restaurant.description %></td>
                </tr>
              </tbody>
            </table>            
          </div>
          <%= link_to "Write Review", new_restaurant_review_path(@restaurant), class: "btn btn-danger" %>
      </div> 
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @restaurant.name %></h1>
        <p><%= @restaurant.description %></p>
        <% if @reviews.blank? %>
          <h3>No reviews yet, would you like to add the first?</h3>
          <%= link_to "Write Review", new_restaurant_review_path(@restaurant), class: "btn btn-danger" %>
          <% else %>
            <% @reviews.each do |review| %>
              <div class="reviews">
                <p><%= review.rating %></p>
                <p><%= review.comment %></p>
                <p><%= link_to 'Destroy', restaurant_review_path(review.restaurant, review), method: :delete, data: {confirm: "Are you sure? This kills the review" } %>
              </div>
          <% end %>
        <% end %>
      </div>     
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Destroy', restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure? This kills the restaurant" } %> |
<%= link_to 'Back', restaurants_path %>
